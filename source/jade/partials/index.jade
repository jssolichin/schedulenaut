//Landing Page Demo
#index
    article.middle
        form#create-form(name="eventForm" ng-submit="submitData(event)" ng-class="{expanded: formExpanded}" novalidate)
            input#event-name(type="input" name="name" ng-model="event.name" ng-click="formExpanded = true; addFormHider()" placeholder="{{placeholder}}" required)
            button(type="submit" value="submit" ) Schedule It!
            .hidden-form.clearfix.fx-fade-down(ng-show="formExpanded")
                .left
                    label(for="calendar") Possible Dates
                    #calendar
                .right
                    div(style="opacity: .4")
                        label(for="privacy") Privacy
                            em  (coming soon)
                        input(type="radio" name="privacy" ng-value="true" ng-model="event.public" disabled)
                        | Public
                        input(type="radio" name="privacy" ng-value="false" ng-model="event.public" disabled)
                        | Password Protected
                        label(for="password" ng-show="event.public == false") Secret Word
                        input(type="password" ng-show="event.public == false" name="location" ng-model="event.password" placeholder="Used to access the event")
                    label(for="location") Location (optional)
                    input(type="text" name="location" ng-model="event.location" placeholder="Event Location")
                    label(for="description") Event Description (optional)
                    textarea(name="description" ng-model="event.description" placeholder="Event Description" )
            #hint(ng-class="{hidden: formExpanded}") Schedulenaut helps figure out when everyone is available for your next meeting!


