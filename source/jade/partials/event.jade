#event
    header(droplet save-drops ng-model="interface" style="background-image: url({{event.image}})")
        .middle.clearfix
            .left
                h1(editable-text="event.name" onaftersave="updateEvent()" edit-disabled="isEventClosed()" ) {{event.name || "Add an Event Name" }}
                p(editable-text="event.description" onaftersave="updateEvent()" edit-disabled="isEventClosed()" ) {{event.description || "Add a Description"}}
                p(editable-text="event.location" onaftersave="updateEvent()" edit-disabled="isEventClosed()" ) {{event.location || "Add a Location"}}
            ul.right#event-tools
                li#event-status(ng-class="{finalized: !event.open}")
                    p.right(ng-click="event.open = !event.open; updateEvent(); reloadView();") 
                        span(ng-if="event.open") In Discussion
                        span(ng-if="!event.open") 
                            i.icon.ion-checkmark-circled
                            |  Finalized
                li(ng-if="event.open")
                    #hint-add-cover.right
                        i.icon.ion-image.right
                        span + Cover Image
                        input(type="file" droplet-upload-single ng-model="interface")
        #drop-hint-wrapper
            #drop-hint
                h1
                    i.icon.ion-image
                h1 + Add Cover Image
    div(ui-view='content')
